generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelos SIGCA

model Usuarios {
  id        String   @id @default(uuid())
  email     String   @unique
  nombre    String
  apellidoP    String
  apellidoM    String
  password  String
  rol       Rol      @default(AUTOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

enum Rol {
  AUTOR
  REVISOR
  COMITE
  ADMIN
}

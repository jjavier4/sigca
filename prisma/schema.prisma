generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id        String   @id // Formato: 2025-RFC/CURP-001
  email     String   @unique
  rfc       String?  @unique // Opcional
  curp      String?  @unique // Opcional
  nombre    String
  apellidoP String
  apellidoM String
  password  String
  rol       Rol      @default(AUTOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  activa          Boolean  @default(false)
  // Relaci贸n con Trabajos (como autor)
  trabajos  Trabajos[]
  
  // Relaci贸n con Asignaciones (como revisor)
  asignacionesComoRevisor Asignaciones[] @relation("RevisorAsignaciones")
}

enum Rol {
  AUTOR
  REVISOR
  COMITE
  ADMIN
}

model Convocatorias {
  id              String   @id // Formato: 2025-001
  titulo          String
  descripcion     String   @db.Text
  fecha_inicio    DateTime
  fecha_cierre    DateTime
  archivo_url     String   // PDF de la convocatoria
  activa          Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relaci贸n con Trabajos
  trabajos        Trabajos[]
}

model Trabajos {
  id                String   @id @default(uuid())
  archivo_url       String
  estado            EstadoTrabajo @default(EN_REVISION)
  titulo            String
  tipo              String
  coautores         String[] @default([]) // Array de nombres de coautores
  presencial        Boolean  @default(false)
  nvl_ia            Float?
  nvl_plagio        Float?
  calificacion_final  Float?

  // Relaciones (Foreign Keys)
  usuarioId         String
  usuario           Usuarios @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  
  convocatoriaId    String
  convocatoria      Convocatorias @relation(fields: [convocatoriaId], references: [id], onDelete: Cascade)
  
  // Relaci贸n con Asignaciones
  asignaciones      Asignaciones[] @relation("TrabajoAsignaciones")
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([usuarioId])
  @@index([convocatoriaId])
  @@index([estado])
}

enum EstadoTrabajo {
  EN_REVISION
  ACEPTADO
  RECHAZADO
}

model Asignaciones {
  id          String   @id @default(uuid())
  activa      Boolean  @default(true)
  comentario  String?  @db.Text // Comentario del revisor
  calificacion  Float?
  // Relaciones (Foreign Keys)
  trabajoId   String
  trabajo     Trabajos @relation("TrabajoAsignaciones", fields: [trabajoId], references: [id], onDelete: Cascade)
  
  revisorId   String
  revisor     Usuarios @relation("RevisorAsignaciones", fields: [revisorId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  closeAt     DateTime?
  
  @@index([trabajoId])
  @@index([revisorId])
  @@index([activa])
  @@unique([trabajoId, revisorId])
}

model CriteriosEvaluacion {
  id          String   @id @default(cuid())
  nombre      String
  descripcion String
  grupo       GrupoRubrica
  descripcion_puntaje         String[] @default([]) // Array de descripcion de puntajes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum GrupoRubrica {
  DIFUSION
  DIVULGACION
}

model Tokens {
  email     String
  token     String   @unique
  createdAt DateTime @default(now())
  
  @@index([email])
  @@index([token])
  @@index([createdAt])
}
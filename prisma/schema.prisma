generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelos SIGCA

model Usuarios {
  id        String   @id @default(uuid())
  email     String   @unique
  nombre    String
  apellidoP    String
  apellidoM    String
  password  String
  rol       Rol      @default(AUTOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

enum Rol {
  AUTOR
  REVISOR
  COMITE
  ADMIN
}

model Convocatorias {
  id              String   @id @default(uuid())
  titulo          String
  descripcion     String   @db.Text
  fecha_inicio    DateTime
  fecha_cierre    DateTime
  areas_tematicas String[]
  requisitos      String   @db.Text
  activa          Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

}
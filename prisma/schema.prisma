generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelos SIGCA

model Usuarios {
  id        String   @id @default(uuid())
  email     String   @unique
  nombre    String
  apellidoP    String
  apellidoM    String
  password  String
  rol       Rol      @default(AUTOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Relación con Trabajos
  trabajos  Trabajos[]

}

enum Rol {
  AUTOR
  REVISOR
  COMITE
  ADMIN
}

model Convocatorias {
  id              String   @id @default(uuid())
  titulo          String
  descripcion     String   @db.Text
  fecha_inicio    DateTime
  fecha_cierre    DateTime
  areas_tematicas String[]
  requisitos      String   @db.Text
  activa          Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  // Relación con Trabajos
  trabajos        Trabajos[]

}

model Trabajos {
  id                String   @id @default(uuid())
  archivo_url       String   // Ruta o URL del PDF subido
  version           Int      @default(1)
  estado            EstadoTrabajo @default(EN_REVISION)
  
  // Relaciones (Foreign Keys)
  usuarioId         String
  usuario           Usuarios @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  
  convocatoriaId    String
  convocatoria      Convocatorias @relation(fields: [convocatoriaId], references: [id], onDelete: Cascade)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([usuarioId])
  @@index([convocatoriaId])
  @@index([estado])
}

enum EstadoTrabajo {
  EN_REVISION
  ACEPTADO
  CAMBIOS_SOLICITADOS
  RECHAZADO
}
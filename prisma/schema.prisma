generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id        String   @id // Formato: 2025-RFC/CURP-001
  email     String   @unique
  rfc       String?  @unique // Opcional
  curp      String?  @unique // Opcional
  nombre    String
  apellidoP String
  apellidoM String
  password  String
  rol       Rol      @default(AUTOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relación con Trabajos (como autor)
  trabajos  Trabajos[]
  
  // Relación con Asignaciones (como revisor)
  asignacionesComoRevisor Asignaciones[] @relation("RevisorAsignaciones")
}

enum Rol {
  AUTOR
  REVISOR
  COMITE
  ADMIN
}

model Convocatorias {
  id              String   @id @default(uuid())
  titulo          String
  descripcion     String   @db.Text
  fecha_inicio    DateTime
  fecha_cierre    DateTime
  areas_tematicas String[]
  requisitos      String   @db.Text
  activa          Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relación con Trabajos
  trabajos        Trabajos[]
}

model Trabajos {
  id                String   @id @default(uuid())
  archivo_url       String
  version           Int      @default(1)
  estado            EstadoTrabajo @default(EN_REVISION)
  
  // Relaciones (Foreign Keys)
  usuarioId         String
  usuario           Usuarios @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  
  convocatoriaId    String
  convocatoria      Convocatorias @relation(fields: [convocatoriaId], references: [id], onDelete: Cascade)
  
  // Relación con Asignaciones
  asignaciones      Asignaciones[] @relation("TrabajoAsignaciones")
  
  // Relación con Comentarios
  comentarios       Comentarios[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([usuarioId])
  @@index([convocatoriaId])
  @@index([estado])
}

model Comentarios {
  id          String   @id @default(uuid())
  contenido   String   @db.Text
  
  // Relación solo con Trabajo (anónimo)
  trabajoId   String
  trabajo     Trabajos @relation(fields: [trabajoId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  
  @@index([trabajoId])
}

enum EstadoTrabajo {
  EN_REVISION
  ACEPTADO
  CAMBIOS_SOLICITADOS
  RECHAZADO
}

model Asignaciones {
  id          String   @id @default(uuid())
  activa      Boolean  @default(true)
  
  // Relaciones (Foreign Keys)
  trabajoId   String
  trabajo     Trabajos @relation("TrabajoAsignaciones", fields: [trabajoId], references: [id], onDelete: Cascade)
  
  revisorId   String
  revisor     Usuarios @relation("RevisorAsignaciones", fields: [revisorId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  closeAt     DateTime
  
  @@index([trabajoId])
  @@index([revisorId])
  @@index([activa])
  @@unique([trabajoId, revisorId])
}